from pytube import Playlist
import os

link = input('Copie o link: ')
p = Playlist(link)

print(f'Baixando Playlist: {p.title}')
print(f'Criando pasta {p.title}')

# os.mkdir(p.title) # Cria uma pasta com o nome da playlist
# os.chdir(f'G:\Cursos\Aulas\Python\Projetos.py\Meus projetos\yt_downloader.mp3\{p.title}') # Coloque o diretorio onde deseja que seja encaminhados as musicas

for video in p.videos:
    arquivo_saida = video.streams.get_audio_only().download()
    print(f'{video.title}')
    nome_base, ext = os.path.splitext(arquivo_saida)
    novo_arquivo = nome_base + '.mp3'
    os.rename(arquivo_saida, novo_arquivo)

